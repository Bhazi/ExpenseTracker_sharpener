<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css"
      integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/elements.css" />
    <title>Expense Tracker</title>
  </head>
  <body>
    <div id="formSection">
      <form id="expenseTracking" action="/" method="POST">
        <label style="margin-left: 12px">Expense Amount :</label>
        <input
          style="margin-top: 25px"
          type="number"
          name="amount"
          id="expense"
        />
        <label style="margin-left: 12px" for="">Description :</label>
        <input
          style="margin-top: 25px"
          type="text"
          name="desc"
          id="description"
        />
        <label style="margin-left: 12px" for="">Category :</label>
        <select
          id="categorys"
          class="form-select"
          aria-label="Default select example"
          name="category"
        >
          <option>Movies</option>
          <option>Fashion</option>
          <option>Grocery</option>
          <option>Tour</option>
          <option>Electric Fees</option>
        </select>
        <input id="expenseSubmit" type="submit" value="Add Expense" />
      </form>
    </div>
    <% if (values.length > 0) { %> <% for (let val of values) { %>
    <div id="elements">
      <label id="expense" name="expense"><%= val.expense %> &nbsp-</label>
      <label id="description" name="description"
        ><%= val.description %>&nbsp-</label
      >
      <label><%= val.category %></label>
      <form action="/edit" method="POST">
        <input
          id="edit"
          class="btn btn-outline-secondary"
          type="submit"
          value="Edit"
        />
        <input type="hidden" value="<%= val.id %>" name="id" />
        <input type="hidden" value="<%= val.expense %>" name="expense" />
        <input
          type="hidden"
          value="<%= val.description %>"
          name="description"
        />
        <input type="hidden" value="<%= val.category %>" name="category" />
      </form>
      <form action="/delete" method="POST">
        <input
          id="delete"
          class="btn btn-outline-danger"
          type="submit"
          value="Delete"
        />
        <input type="hidden" value="<%= val.id %>" name="id" />
      </form>
    </div>
    <div>
      <% } %> <% } else { %>
      <h3>No Details</h3>
      <% } %>
    </div>
  </body>
</html>
